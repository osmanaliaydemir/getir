@page "/notifications"
@using WebApp.Models
@inject IAuthService AuthService
@inject INotificationService NotificationService
@inject ISignalRService SignalRService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject ILogger<Notifications> Logger
@implements IDisposable

<PageTitle>Bildirimler - Getir</PageTitle>

@if (!isAuthenticated)
{
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <div class="card">
                    <div class="card-body py-5">
                        <i class="bi bi-person-x display-1 text-warning mb-4"></i>
                        <h3>Giriş Yapın</h3>
                        <p class="text-muted mb-4">
                            Bildirimlerinizi görüntülemek için giriş yapmanız gerekiyor.
                        </p>
                        <a href="/login" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right"></i>
                            Giriş Yap
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Yükleniyor...</span>
        </div>
        <p class="mt-3">Bildirimleriniz yükleniyor...</p>
    </div>
}
else
{
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                <li class="breadcrumb-item active" aria-current="page">Bildirimler</li>
            </ol>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="bi bi-bell"></i>
                            Bildirimlerim
                        </h4>
                        <div class="d-flex gap-2">
                            <button class="btn btn-outline-primary btn-sm" @onclick="MarkAllAsRead">
                                <i class="bi bi-check-all"></i>
                                Tümünü Okundu İşaretle
                            </button>
                            <button class="btn btn-outline-danger btn-sm" @onclick="ClearAllNotifications">
                                <i class="bi bi-trash"></i>
                                Tümünü Temizle
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (notifications?.Any() == true)
                        {
                            <div class="notification-list">
                                @foreach (var notification in notifications)
                                {
                                    <div class="notification-item @(notification.IsRead ? "" : "unread") mb-3">
                                        <div class="card @(notification.IsRead ? "" : "border-primary")">
                                            <div class="card-body">
                                                <div class="d-flex align-items-start">
                                                    <div class="notification-icon me-3">
                                                        <i class="bi @GetNotificationIcon(notification.Type) @GetNotificationIconClass(notification.Type)"></i>
                                                    </div>
                                                    <div class="flex-grow-1">
                                                        <div class="d-flex justify-content-between align-items-start">
                                                            <h6 class="mb-1 @(notification.IsRead ? "" : "fw-bold")">@notification.Title</h6>
                                                            <div class="d-flex gap-1">
                                                                @if (!notification.IsRead)
                                                                {
                                                                    <button class="btn btn-sm btn-outline-primary" @onclick="@(() => MarkAsRead(notification.Id))">
                                                                        <i class="bi bi-check"></i>
                                                                    </button>
                                                                }
                                                                <button class="btn btn-sm btn-outline-danger" @onclick="@(() => DeleteNotification(notification.Id))">
                                                                    <i class="bi bi-trash"></i>
                                                                </button>
                                                            </div>
                                                        </div>
                                                        <p class="mb-2 text-muted">@notification.Message</p>
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <small class="text-muted">
                                                                <i class="bi bi-clock"></i>
                                                                @notification.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                                            </small>
                                                            @if (!string.IsNullOrEmpty(notification.ActionUrl))
                                                            {
                                                                <a href="@notification.ActionUrl" class="btn btn-sm btn-primary">
                                                                    <i class="bi bi-arrow-right"></i>
                                                                    @notification.ActionText
                                                                </a>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="bi bi-bell display-1 text-muted mb-4"></i>
                                <h4>Henüz bildiriminiz yok</h4>
                                <p class="text-muted mb-4">Yeni siparişler, kampanyalar ve önemli güncellemeler burada görünecek!</p>
                                <a href="/merchants" class="btn btn-primary">
                                    <i class="bi bi-shop"></i>
                                    Alışverişe Başla
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool isAuthenticated = false;
    private bool isLoading = true;
    private List<NotificationResponse>? notifications;

    protected override async Task OnInitializedAsync()
    {
        isAuthenticated = await AuthService.IsAuthenticatedAsync();
        if (isAuthenticated)
        {
            await LoadNotifications();
            await InitializeSignalR();
        }
        isLoading = false;
        AuthService.AuthenticationStateChanged += OnAuthenticationStateChanged;
    }

    private async void OnAuthenticationStateChanged()
    {
        isAuthenticated = await AuthService.IsAuthenticatedAsync();
        if (isAuthenticated)
        {
            await LoadNotifications();
            await InitializeSignalR();
        }
        await InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        AuthService.AuthenticationStateChanged -= OnAuthenticationStateChanged;
        SignalRService.NotificationReceived -= OnSignalRNotificationReceived;
    }

    private async Task InitializeSignalR()
    {
        try
        {
            SignalRService.NotificationReceived += OnSignalRNotificationReceived;
            
            if (!SignalRService.IsConnected)
            {
                await SignalRService.StartConnectionAsync();
            }

            // Join notifications group
            await SignalRService.JoinGroupAsync($"notifications-{await GetCurrentUserId()}");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error initializing SignalR for notifications");
        }
    }

    private async Task<string?> GetCurrentUserId()
    {
        try
        {
            var user = await AuthService.GetCurrentUserAsync();
            return user?.UserId.ToString();
        }
        catch
        {
            return null;
        }
    }

    private void OnSignalRNotificationReceived(string type, object data)
    {
        try
        {
            if (type == "Notification" || type == "ReceiveNotification")
            {
                var notificationJson = System.Text.Json.JsonSerializer.Serialize(data);
                var notification = System.Text.Json.JsonSerializer.Deserialize<NotificationResponse>(notificationJson);
                
                if (notification != null)
                {
                    notifications ??= new List<NotificationResponse>();
                    notifications.Insert(0, notification);
                    InvokeAsync(StateHasChanged);
                    
                    // Show browser notification if permission granted
                    JSRuntime.InvokeVoidAsync("showBrowserNotification", notification.Title, notification.Message);
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error processing SignalR notification");
        }
    }

    private async Task LoadNotifications()
    {
        try
        {
            isLoading = true;
            notifications = await NotificationService.GetUserNotificationsAsync();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("showError", "Bildirimler yüklenirken bir hata oluştu: " + ex.Message);
            notifications = new List<NotificationResponse>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task MarkAsRead(Guid notificationId)
    {
        try
        {
            var success = await NotificationService.MarkAsReadAsync(notificationId);
            
            if (success)
            {
                // UI'ı güncelle
                var notification = notifications?.FirstOrDefault(n => n.Id == notificationId);
                if (notification != null)
                {
                    notification.IsRead = true;
                    await InvokeAsync(StateHasChanged);
                }
                await JSRuntime.InvokeVoidAsync("showSuccess", "Bildirim okundu olarak işaretlendi!");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("showError", "Bildirim işaretlenirken bir hata oluştu.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("showError", "Bir hata oluştu: " + ex.Message);
        }
    }

    private async Task MarkAllAsRead()
    {
        try
        {
            var success = await NotificationService.MarkAllAsReadAsync();
            
            if (success)
            {
                // UI'ı güncelle
                if (notifications != null)
                {
                    foreach (var notification in notifications)
                    {
                        notification.IsRead = true;
                    }
                    await InvokeAsync(StateHasChanged);
                }
                await JSRuntime.InvokeVoidAsync("showSuccess", "Tüm bildirimler okundu olarak işaretlendi!");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("showError", "Bildirimler işaretlenirken bir hata oluştu.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("showError", "Bir hata oluştu: " + ex.Message);
        }
    }

    private async Task DeleteNotification(Guid notificationId)
    {
        try
        {
            var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Bu bildirimi silmek istediğinizden emin misiniz?");
            if (!confirmed) return;

            var success = await NotificationService.DeleteNotificationAsync(notificationId);
            
            if (success)
            {
                // UI'dan kaldır
                notifications?.RemoveAll(n => n.Id == notificationId);
                await InvokeAsync(StateHasChanged);
                await JSRuntime.InvokeVoidAsync("showSuccess", "Bildirim silindi!");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("showError", "Bildirim silinirken bir hata oluştu.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("showError", "Bir hata oluştu: " + ex.Message);
        }
    }

    private async Task ClearAllNotifications()
    {
        try
        {
            var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Tüm bildirimleri silmek istediğinizden emin misiniz?");
            if (!confirmed) return;

            var success = await NotificationService.ClearAllNotificationsAsync();
            
            if (success)
            {
                // UI'dan temizle
                notifications?.Clear();
                await InvokeAsync(StateHasChanged);
                await JSRuntime.InvokeVoidAsync("showSuccess", "Tüm bildirimler temizlendi!");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("showError", "Bildirimler temizlenirken bir hata oluştu.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("showError", "Bir hata oluştu: " + ex.Message);
        }
    }

    private string GetNotificationIcon(string type)
    {
        return type switch
        {
            "Order" => "bi-bag",
            "Promotion" => "bi-percent",
            "Delivery" => "bi-truck",
            "Payment" => "bi-credit-card",
            "System" => "bi-gear",
            _ => "bi-bell"
        };
    }

    private string GetNotificationIconClass(string type)
    {
        return type switch
        {
            "Order" => "text-primary",
            "Promotion" => "text-success",
            "Delivery" => "text-info",
            "Payment" => "text-warning",
            "System" => "text-secondary",
            _ => "text-primary"
        };
    }
}

