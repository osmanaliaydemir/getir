@page "/cart"
@inject ICartService CartService
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject ILogger<Cart> Logger

<PageTitle>Sepetim - Getir</PageTitle>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Yükleniyor...</span>
        </div>
        <p class="mt-3">Sepet yükleniyor...</p>
    </div>
}
else if (cart == null || !cart.Items.Any())
{
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <div class="card">
                    <div class="card-body py-5">
                        <i class="bi bi-cart display-1 text-primary mb-4"></i>
                        <h3>Sepetiniz Boş</h3>
                        <p class="text-muted mb-4">
                            Henüz sepetinize ürün eklemediniz. 
                            Hemen alışverişe başlayın!
                        </p>
                        <a href="/" class="btn btn-primary btn-lg">
                            <i class="bi bi-house"></i>
                            Alışverişe Başla
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container py-4">
        <div class="row">
            <div class="col-lg-8">
                <h2 class="mb-4">
                    <i class="bi bi-cart"></i>
                    Sepetim (@cart.ItemCount ürün)
                </h2>
                
                <div class="card">
                    <div class="card-body">
                        @foreach (var item in cart.Items)
                        {
                            <div class="row align-items-center mb-3 pb-3 border-bottom">
                                <div class="col-md-2">
                                    <img src="@(string.IsNullOrEmpty(item.ProductImageUrl) ? "https://via.placeholder.com/80x80/007bff/ffffff?text=" + Uri.EscapeDataString(item.ProductName) : item.ProductImageUrl)" 
                                         class="img-fluid rounded" 
                                         alt="@item.ProductName" />
                                </div>
                                <div class="col-md-4">
                                    <h6 class="mb-1">@item.ProductName</h6>
                                    @if (!string.IsNullOrEmpty(item.Notes))
                                    {
                                        <small class="text-muted">@item.Notes</small>
                                    }
                                </div>
                                <div class="col-md-2 text-center">
                                    <span class="fw-bold">₺@item.UnitPrice.ToString("F2")</span>
                                </div>
                                <div class="col-md-2 text-center">
                                    <span class="badge bg-primary">@item.Quantity</span>
                                </div>
                                <div class="col-md-2 text-end">
                                    <span class="fw-bold">₺@item.TotalPrice.ToString("F2")</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Sipariş Özeti</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Ara Toplam:</span>
                            <span>₺@cart.SubTotal.ToString("F2")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Teslimat Ücreti:</span>
                            <span>₺@cart.DeliveryFee.ToString("F2")</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between fw-bold">
                            <span>Toplam:</span>
                            <span>₺@cart.Total.ToString("F2")</span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-primary w-100" @onclick="ProceedToCheckout">
                            <i class="bi bi-credit-card"></i>
                            Ödemeye Geç
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private CartResponse? cart;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadCart();
    }

    private async Task LoadCart()
    {
        try
        {
            isLoading = true;
            cart = await CartService.GetCartAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading cart: {Message}", ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ProceedToCheckout()
    {
        Navigation.NavigateTo("/checkout");
    }
}
