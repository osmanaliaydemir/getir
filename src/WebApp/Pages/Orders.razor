@page "/orders"
@inject IOrderService OrderService
@inject IAuthService AuthService
@inject ISignalRService SignalRService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject ILogger<Orders> Logger
@implements IDisposable

<PageTitle>Siparişlerim - Getir</PageTitle>

@if (!isAuthenticated)
{
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <div class="card">
                    <div class="card-body py-5">
                        <i class="bi bi-person-x display-1 text-warning mb-4"></i>
                        <h3>Giriş Yapın</h3>
                        <p class="text-muted mb-4">
                            Siparişlerinizi görüntülemek için giriş yapmanız gerekiyor.
                        </p>
                        <a href="/login" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right"></i>
                            Giriş Yap
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Yükleniyor...</span>
        </div>
        <p class="mt-3">Siparişleriniz yükleniyor...</p>
    </div>
}
else
{
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                <li class="breadcrumb-item active" aria-current="page">Siparişlerim</li>
            </ol>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="bi bi-bag"></i>
                            Siparişlerim
                        </h4>
                        <div class="d-flex gap-2">
                            <select class="form-select form-select-sm" @bind="selectedStatus" @bind:after="FilterOrders">
                                <option value="">Tüm Siparişler</option>
                                <option value="Pending">Bekleyen</option>
                                <option value="Confirmed">Onaylandı</option>
                                <option value="Preparing">Hazırlanıyor</option>
                                <option value="OnTheWay">Yolda</option>
                                <option value="Delivered">Teslim Edildi</option>
                                <option value="Cancelled">İptal Edildi</option>
                            </select>
                            <button class="btn btn-outline-primary btn-sm" @onclick="RefreshOrders">
                                <i class="bi bi-arrow-clockwise"></i>
                                Yenile
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (orders?.Any() == true)
                        {
                            <div class="row">
                                @foreach (var order in filteredOrders)
                                {
                                    <div class="col-12 mb-4">
                                        <div class="card border @GetOrderStatusBorderClass(order.Status)">
                                            <div class="card-header d-flex justify-content-between align-items-center">
                                                <div>
                                                    <h6 class="mb-0">Sipariş #@order.OrderNumber</h6>
                                                    <small class="text-muted">@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</small>
                                                </div>
                                                <div class="text-end">
                                                    <span class="badge @GetOrderStatusBadgeClass(order.Status)">@GetOrderStatusText(order.Status)</span>
                                                    <div class="fw-bold text-primary">₺@order.TotalAmount.ToString("F2")</div>
                                                </div>
                                            </div>
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-md-8">
                                                        <div class="d-flex align-items-center mb-3">
                                                            <img src="@(string.IsNullOrEmpty(order.Merchant.ImageUrl) ? "https://via.placeholder.com/60x60/007bff/ffffff?text=" + Uri.EscapeDataString(order.Merchant.Name) : order.Merchant.ImageUrl)" 
                                                                 class="me-3 rounded" width="60" height="60" alt="@order.Merchant.Name" />
                                                            <div>
                                                                <h6 class="mb-1">@order.Merchant.Name</h6>
                                                                <small class="text-muted">@order.Merchant.Address</small>
                                                            </div>
                                                        </div>
                                                        
                                                        <div class="order-items">
                                                            <h6 class="mb-2">Sipariş Detayları:</h6>
                                                            @foreach (var item in order.Items)
                                                            {
                                                                <div class="d-flex align-items-center mb-2 p-2 bg-light rounded">
                                                                    <img src="@(string.IsNullOrEmpty(item.ProductImageUrl) ? "https://via.placeholder.com/50x50/007bff/ffffff?text=" + Uri.EscapeDataString(item.ProductName) : item.ProductImageUrl)" 
                                                                         class="me-3" width="50" height="50" alt="@item.ProductName" />
                                                                    <div class="flex-grow-1">
                                                                        <div class="fw-bold">@item.ProductName</div>
                                                                        <small class="text-muted">@item.Quantity adet × ₺@item.UnitPrice.ToString("F2") = ₺@((item.Quantity * item.UnitPrice).ToString("F2"))</small>
                                                                    </div>
                                                                </div>
                                                            }
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="order-summary">
                                                            <h6 class="mb-3">Sipariş Özeti</h6>
                                                            <div class="d-flex justify-content-between mb-2">
                                                                <span>Ara Toplam:</span>
                                                                <span>₺@order.TotalAmount.ToString("F2")</span>
                                                            </div>
                                                            <div class="d-flex justify-content-between mb-2">
                                                                <span>Teslimat Ücreti:</span>
                                                                <span class="text-success">Ücretsiz</span>
                                                            </div>
                                                            <hr>
                                                            <div class="d-flex justify-content-between fw-bold">
                                                                <span>Toplam:</span>
                                                                <span class="text-primary">₺@order.TotalAmount.ToString("F2")</span>
                                                            </div>
                                                        </div>
                                                        
                                                        <div class="order-actions mt-3">
                                                            <button class="btn btn-outline-primary btn-sm w-100 mb-2" @onclick="@(() => ViewOrderDetails(order.Id))">
                                                                <i class="bi bi-eye"></i> Detayları Gör
                                                            </button>
                                                            @if (order.Status == "Pending" || order.Status == "Confirmed")
                                                            {
                                                                <button class="btn btn-outline-danger btn-sm w-100 mb-2" @onclick="@(() => CancelOrder(order.Id))">
                                                                    <i class="bi bi-x-circle"></i> İptal Et
                                                                </button>
                                                            }
                                                            <button class="btn btn-outline-success btn-sm w-100" @onclick="@(() => RepeatOrder(order.Id))">
                                                                <i class="bi bi-arrow-repeat"></i> Tekrarla
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="bi bi-bag display-1 text-muted mb-4"></i>
                                <h4>Henüz siparişiniz yok</h4>
                                <p class="text-muted mb-4">İlk siparişinizi vermek için alışverişe başlayın!</p>
                                <a href="/merchants" class="btn btn-primary">
                                    <i class="bi bi-shop"></i>
                                    Mağazaları Gör
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool isAuthenticated = false;
    private bool isLoading = true;
    private List<OrderResponse>? orders;
    private List<OrderResponse> filteredOrders = new();
    private string selectedStatus = "";

    protected override async Task OnInitializedAsync()
    {
        isAuthenticated = await AuthService.IsAuthenticatedAsync();
        if (isAuthenticated)
        {
            await LoadOrders();
            await InitializeSignalR();
        }
        isLoading = false;
        AuthService.AuthenticationStateChanged += OnAuthenticationStateChanged;
    }

    private async void OnAuthenticationStateChanged()
    {
        isAuthenticated = await AuthService.IsAuthenticatedAsync();
        if (isAuthenticated)
        {
            await LoadOrders();
            await InitializeSignalR();
        }
        await InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        AuthService.AuthenticationStateChanged -= OnAuthenticationStateChanged;
        SignalRService.NotificationReceived -= OnSignalROrderUpdate;
    }

    private async Task InitializeSignalR()
    {
        try
        {
            SignalRService.NotificationReceived += OnSignalROrderUpdate;
            
            if (!SignalRService.IsConnected)
            {
                await SignalRService.StartConnectionAsync();
            }

            // Join orders group for real-time updates
            await SignalRService.JoinGroupAsync($"orders-{await GetCurrentUserId()}");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error initializing SignalR for orders");
        }
    }

    private async Task<string?> GetCurrentUserId()
    {
        try
        {
            var user = await AuthService.GetCurrentUserAsync();
            return user?.UserId.ToString();
        }
        catch
        {
            return null;
        }
    }

    private void OnSignalROrderUpdate(string type, object data)
    {
        try
        {
            if (type == "OrderUpdate" || type == "ReceiveOrderUpdate")
            {
                var orderJson = System.Text.Json.JsonSerializer.Serialize(data);
                var orderUpdate = System.Text.Json.JsonSerializer.Deserialize<OrderUpdate>(orderJson);
                
                if (orderUpdate != null && orders != null)
                {
                    var existingOrder = orders.FirstOrDefault(o => o.Id == orderUpdate.OrderId);
                    if (existingOrder != null)
                    {
                        existingOrder.Status = orderUpdate.NewStatus;
                        FilterOrders();
                        InvokeAsync(StateHasChanged);
                        
                        Logger.LogInformation("Order {OrderId} status updated to {Status}", orderUpdate.OrderId, orderUpdate.NewStatus);
                    }
                    else
                    {
                        // Order might be new, reload all orders
                        InvokeAsync(LoadOrders);
                    }
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error processing SignalR order update");
        }
    }

    private async Task LoadOrders()
    {
        try
        {
            isLoading = true;
            orders = await OrderService.GetUserOrdersAsync();
            FilterOrders();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("showError", "Siparişler yüklenirken bir hata oluştu: " + ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    private void FilterOrders()
    {
        if (orders == null)
        {
            filteredOrders = new();
            return;
        }

        if (string.IsNullOrEmpty(selectedStatus))
        {
            filteredOrders = orders.ToList();
        }
        else
        {
            filteredOrders = orders.Where(o => o.Status == selectedStatus).ToList();
        }
    }

    private async Task RefreshOrders()
    {
        await LoadOrders();
        await JSRuntime.InvokeVoidAsync("showSuccess", "Siparişler yenilendi!");
    }

    private void ViewOrderDetails(Guid orderId)
    {
        Navigation.NavigateTo($"/order/{orderId}");
    }

    private void TrackOrder(Guid orderId)
    {
        Navigation.NavigateTo($"/order/{orderId}/tracking");
    }

    private async Task CancelOrder(Guid orderId)
    {
        try
        {
            var success = await OrderService.CancelOrderAsync(orderId);
            if (success)
            {
                await JSRuntime.InvokeVoidAsync("showSuccess", "Sipariş iptal edildi!");
                await LoadOrders();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("showError", "Sipariş iptal edilirken bir hata oluştu.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("showError", "Bir hata oluştu: " + ex.Message);
        }
    }

    private async Task RepeatOrder(Guid orderId)
    {
        try
        {
            var success = await OrderService.RepeatOrderAsync(orderId);
            if (success)
            {
                await JSRuntime.InvokeVoidAsync("showSuccess", "Sipariş tekrarlandı! Sepetinize eklendi.");
                Navigation.NavigateTo("/cart");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("showError", "Sipariş tekrarlanırken bir hata oluştu.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("showError", "Bir hata oluştu: " + ex.Message);
        }
    }

    private string GetOrderStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning",
            "Confirmed" => "bg-info",
            "Preparing" => "bg-primary",
            "OnTheWay" => "bg-success",
            "Delivered" => "bg-success",
            "Cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private string GetOrderStatusBorderClass(string status)
    {
        return status switch
        {
            "Pending" => "border-warning",
            "Confirmed" => "border-info",
            "Preparing" => "border-primary",
            "OnTheWay" => "border-success",
            "Delivered" => "border-success",
            "Cancelled" => "border-danger",
            _ => "border-secondary"
        };
    }

    private string GetOrderStatusText(string status)
    {
        return status switch
        {
            "Pending" => "Bekleyen",
            "Confirmed" => "Onaylandı",
            "Preparing" => "Hazırlanıyor",
            "OnTheWay" => "Yolda",
            "Delivered" => "Teslim Edildi",
            "Cancelled" => "İptal Edildi",
            _ => status
        };
    }

    private class OrderUpdate
    {
        public Guid OrderId { get; set; }
        public string NewStatus { get; set; } = string.Empty;
        public DateTime UpdatedAt { get; set; }
    }
}
