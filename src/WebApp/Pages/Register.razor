@page "/register"
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject LocalizationService LocalizationService

<PageTitle>@GetLocalizedText("auth.register") - Getir</PageTitle>

<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="auth-card">
                    <div class="auth-header">
                        <h2 class="auth-title">
                            <i class="bi bi-person-plus"></i>
                            @GetLocalizedText("auth.register")
                        </h2>
                        <p class="auth-subtitle">@GetLocalizedText("auth.create_new_account")</p>
                    </div>

                    <div class="auth-body">
                        <form @onsubmit="HandleRegister">
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label">@GetLocalizedText("auth.first_name")</label>
                                        <input type="text" 
                                               class="@GetInputClass(isFirstNameInvalid)" 
                                               @bind="registerRequest.FirstName" 
                                               @onblur="ValidateFirstName"
                                               placeholder="@GetLocalizedText("auth.first_name_placeholder")" />
                                        @if (isFirstNameInvalid)
                                        {
                                            <div class="invalid-feedback">@GetLocalizedText("auth.first_name_error")</div>
                                        }
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label">@GetLocalizedText("auth.last_name")</label>
                                        <input type="text" 
                                               class="@GetInputClass(isLastNameInvalid)" 
                                               @bind="registerRequest.LastName" 
                                               @onblur="ValidateLastName"
                                               placeholder="@GetLocalizedText("auth.last_name_placeholder")" />
                                        @if (isLastNameInvalid)
                                        {
                                            <div class="invalid-feedback">@GetLocalizedText("auth.last_name_error")</div>
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label">@GetLocalizedText("auth.email")</label>
                                <input type="email" 
                                       class="@GetInputClass(isEmailInvalid)" 
                                       @bind="registerRequest.Email" 
                                       @onblur="ValidateEmail"
                                       placeholder="@GetLocalizedText("auth.email_placeholder")" />
                                @if (isEmailInvalid)
                                {
                                    <div class="invalid-feedback">@GetLocalizedText("auth.email_error")</div>
                                }
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label">@GetLocalizedText("auth.phone")</label>
                                <input type="tel" 
                                       class="@GetInputClass(isPhoneInvalid)" 
                                       @bind="registerRequest.PhoneNumber" 
                                       @onblur="ValidatePhone"
                                       placeholder="@GetLocalizedText("auth.phone_placeholder")" />
                                @if (isPhoneInvalid)
                                {
                                    <div class="invalid-feedback">@GetLocalizedText("auth.phone_error")</div>
                                }
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label">@GetLocalizedText("auth.password")</label>
                                <div class="password-input">
                                    <input type="@(showPassword ? "text" : "password")" 
                                           class="@GetInputClass(isPasswordInvalid)" 
                                           @bind="registerRequest.Password" 
                                           @onblur="ValidatePassword"
                                           placeholder="@GetLocalizedText("auth.password_placeholder")" />
                                    <button type="button" class="password-toggle" @onclick="TogglePassword">
                                        <i class="bi @(showPassword ? "bi-eye-slash" : "bi-eye")"></i>
                                    </button>
                                </div>
                                @if (isPasswordInvalid)
                                {
                                    <div class="invalid-feedback">@GetLocalizedText("auth.password_error")</div>
                                }
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label">@GetLocalizedText("auth.confirm_password")</label>
                                <div class="password-input">
                                    <input type="@(showConfirmPassword ? "text" : "password")" 
                                           class="@GetInputClass(isConfirmPasswordInvalid)" 
                                           @bind="confirmPassword" 
                                           @onblur="ValidateConfirmPassword"
                                           placeholder="@GetLocalizedText("auth.confirm_password_placeholder")" />
                                    <button type="button" class="password-toggle" @onclick="ToggleConfirmPassword">
                                        <i class="bi @(showConfirmPassword ? "bi-eye-slash" : "bi-eye")"></i>
                                    </button>
                                </div>
                                @if (isConfirmPasswordInvalid)
                                {
                                    <div class="invalid-feedback">@GetLocalizedText("auth.confirm_password_error")</div>
                                }
                            </div>

                            <div class="form-group mb-3">
                                <div class="form-check">
                                    <input type="checkbox" @bind="acceptTerms" class="form-check-input" />
                                    <label class="form-check-label">
                                        <a href="/terms" target="_blank">@GetLocalizedText("auth.terms_of_service")</a> @GetLocalizedText("auth.and") 
                                        <a href="/privacy" target="_blank">@GetLocalizedText("auth.privacy_policy")</a>@GetLocalizedText("auth.accept_terms")
                                    </label>
                                </div>
                            </div>

                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-primary btn-lg" disabled="@isLoading">
                                    @if (isLoading)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        <text>@GetLocalizedText("auth.creating_account")</text>
                                    }
                                    else
                                    {
                                        <i class="bi bi-person-plus"></i>
                                        <text>@GetLocalizedText("auth.register")</text>
                                    }
                                </button>
                            </div>
                        </form>

                        <div class="auth-divider">
                            <span>@GetLocalizedText("auth.or")</span>
                        </div>

                        <div class="auth-links">
                            <a href="/login" class="btn btn-outline-primary">
                                <i class="bi bi-box-arrow-in-right"></i>
                                @GetLocalizedText("auth.login")
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private RegisterRequest registerRequest = new();
    private string confirmPassword = string.Empty;
    private bool isLoading = false;
    private bool showPassword = false;
    private bool showConfirmPassword = false;
    private bool acceptTerms = false;
    
    private bool isFirstNameInvalid = false;
    private bool isLastNameInvalid = false;
    private bool isEmailInvalid = false;
    private bool isPhoneInvalid = false;
    private bool isPasswordInvalid = false;
    private bool isConfirmPasswordInvalid = false;

    private string GetInputClass(bool isInvalid)
    {
        return $"form-control {(isInvalid ? "is-invalid" : "")}";
    }

    private void ValidateFirstName()
    {
        isFirstNameInvalid = string.IsNullOrEmpty(registerRequest.FirstName) || registerRequest.FirstName.Length < 2;
    }

    private void ValidateLastName()
    {
        isLastNameInvalid = string.IsNullOrEmpty(registerRequest.LastName) || registerRequest.LastName.Length < 2;
    }

    private void ValidateEmail()
    {
        isEmailInvalid = string.IsNullOrEmpty(registerRequest.Email) || !registerRequest.Email.Contains("@");
    }

    private void ValidatePhone()
    {
        isPhoneInvalid = string.IsNullOrEmpty(registerRequest.PhoneNumber) || registerRequest.PhoneNumber.Length < 10;
    }

    private void ValidatePassword()
    {
        isPasswordInvalid = string.IsNullOrEmpty(registerRequest.Password) || registerRequest.Password.Length < 6;
    }

    private void ValidateConfirmPassword()
    {
        isConfirmPasswordInvalid = string.IsNullOrEmpty(confirmPassword) || confirmPassword != registerRequest.Password;
    }

    private void TogglePassword()
    {
        showPassword = !showPassword;
    }

    private void ToggleConfirmPassword()
    {
        showConfirmPassword = !showConfirmPassword;
    }

    private string GetLocalizedText(string key)
    {
        return LocalizationService.GetString(key);
    }

    private async Task HandleRegister()
    {
        try
        {
            isLoading = true;
            
            // Validate all fields
            ValidateFirstName();
            ValidateLastName();
            ValidateEmail();
            ValidatePhone();
            ValidatePassword();
            ValidateConfirmPassword();

            if (isFirstNameInvalid || isLastNameInvalid || isEmailInvalid || 
                isPhoneInvalid || isPasswordInvalid || isConfirmPasswordInvalid)
            {
                await JSRuntime.InvokeVoidAsync("showError", GetLocalizedText("auth.fill_all_fields"));
                return;
            }

            if (!acceptTerms)
            {
                await JSRuntime.InvokeVoidAsync("showError", GetLocalizedText("auth.accept_terms_required"));
                return;
            }

            var result = await AuthService.RegisterAsync(registerRequest);
            
            if (result != null && result.IsSuccess)
            {
                await JSRuntime.InvokeVoidAsync("showSuccess", GetLocalizedText("auth.register_success"));
                Navigation.NavigateTo("/login");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("showError", result?.Error ?? GetLocalizedText("auth.register_error"));
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("showError", GetLocalizedText("auth.generic_error") + ": " + ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }
}
