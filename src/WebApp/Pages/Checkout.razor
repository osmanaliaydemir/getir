@page "/checkout"
@using WebApp.Models
@inject ICartService CartService
@inject IUserService UserService
@inject IAuthService AuthService
@inject ILogger<Checkout> Logger
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Ödeme - Getir</PageTitle>

@if (!isAuthenticated)
{
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <div class="card">
                    <div class="card-body py-5">
                        <i class="bi bi-lock display-1 text-warning mb-4"></i>
                        <h3>Giriş Yapın</h3>
                        <p class="text-muted mb-4">
                            Ödeme işlemi için giriş yapmanız gerekiyor.
                        </p>
                        <a href="/login" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right"></i>
                            Giriş Yap
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Yükleniyor...</span>
        </div>
        <p class="mt-3">Sepet bilgileri yükleniyor...</p>
    </div>
}
else if (cart?.Items?.Any() != true)
{
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <div class="card">
                    <div class="card-body py-5">
                        <i class="bi bi-cart-x display-1 text-muted mb-4"></i>
                        <h3>Sepetiniz Boş</h3>
                        <p class="text-muted mb-4">
                            Ödeme yapmak için sepetinize ürün ekleyin.
                        </p>
                        <a href="/merchants" class="btn btn-primary btn-lg">
                            <i class="bi bi-shop"></i>
                            Alışverişe Başla
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                <li class="breadcrumb-item"><a href="/cart">Sepetim</a></li>
                <li class="breadcrumb-item active" aria-current="page">Ödeme</li>
            </ol>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <!-- Checkout Form -->
            <div class="col-lg-8 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-credit-card"></i>
                            Ödeme Bilgileri
                        </h5>
                    </div>
                    <div class="card-body">
                        <EditForm Model="checkoutRequest" OnValidSubmit="ProcessOrder">
                            <DataAnnotationsValidator />
                            
                            <!-- Delivery Address -->
                            <div class="mb-4">
                                <h6 class="mb-3">Teslimat Adresi</h6>
                                @if (addresses?.Any() == true)
                                {
                                    <div class="row">
                                        @foreach (var address in addresses)
                                        {
                                            <div class="col-md-6 mb-3">
                                                <div class="card @(checkoutRequest.DeliveryAddressId == address.Id ? "border-primary" : "") address-option" 
                                                     @onclick="@(() => SelectAddress(address.Id))">
                                                    <div class="card-body">
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio" 
                                                                   name="deliveryAddress" 
                                                                   @bind="checkoutRequest.DeliveryAddressId"
                                                                   id="address_@address.Id">
                                                            <label class="form-check-label" for="address_@address.Id">
                                                                <strong>@address.Title</strong>
                                                                @if (address.IsDefault)
                                                                {
                                                                    <span class="badge bg-primary ms-2">Varsayılan</span>
                                                                }
                                                            </label>
                                                        </div>
                                                        <p class="card-text mt-2 mb-0">
                                                            @address.AddressLine1<br>
                                                            @if (!string.IsNullOrEmpty(address.AddressLine2))
                                                            {
                                                                @address.AddressLine2<br>
                                                            }
                                                            @address.District, @address.City<br>
                                                            @address.PostalCode
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    <div class="text-center">
                                        <button type="button" class="btn btn-outline-primary" @onclick="ShowAddAddressModal">
                                            <i class="bi bi-plus"></i>
                                            Yeni Adres Ekle
                                        </button>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-info">
                                        <i class="bi bi-info-circle"></i>
                                        <p class="mb-0">Teslimat için adres eklemeniz gerekiyor.</p>
                                        <button type="button" class="btn btn-primary btn-sm mt-2" @onclick="ShowAddAddressModal">
                                            <i class="bi bi-plus"></i>
                                            Adres Ekle
                                        </button>
                                    </div>
                                }
                            </div>

                            <!-- Payment Method -->
                            <div class="mb-4">
                                <h6 class="mb-3">Ödeme Yöntemi</h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="card @(checkoutRequest.PaymentMethod == "Cash" ? "border-primary" : "") payment-option" 
                                             @onclick="@(() => SelectPaymentMethod("Cash"))">
                                            <div class="card-body text-center">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" 
                                                           name="paymentMethod" 
                                                           @bind="checkoutRequest.PaymentMethod"
                                                           id="payment_cash">
                                                    <label class="form-check-label" for="payment_cash">
                                                        <i class="bi bi-cash-coin display-4 text-success mb-2"></i>
                                                        <h6>Nakit Ödeme</h6>
                                                        <small class="text-muted">Kapıda nakit ödeme</small>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="card border-secondary payment-option-disabled">
                                            <div class="card-body text-center">
                                                <i class="bi bi-credit-card display-4 text-muted mb-2"></i>
                                                <h6 class="text-muted">Kart ile Ödeme</h6>
                                                <small class="text-muted">Yakında gelecek</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Order Notes -->
                            <div class="mb-4">
                                <label class="form-label">Sipariş Notu (Opsiyonel)</label>
                                <textarea class="form-control" rows="3" 
                                          placeholder="Siparişinizle ilgili özel notlarınızı buraya yazabilirsiniz..."
                                          @bind="checkoutRequest.Notes"></textarea>
                            </div>

                            <!-- Submit Button -->
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg" disabled="@isProcessingOrder">
                                    @if (isProcessingOrder)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status">
                                        Sipariş İşleniyor...</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-check-circle"></i>
                                       <span> Siparişi Tamamla (₺@cart.TotalAmount.ToString("F2"))</span>
                                    }
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-receipt"></i>
                            Sipariş Özeti
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (cart?.Items?.Any() == true)
                        {
                            <div class="order-items">
                                @foreach (var item in cart.Items)
                                {
                                    <div class="d-flex align-items-center mb-3">
                                        <img src="@(string.IsNullOrEmpty(item.ProductImageUrl) ? "https://via.placeholder.com/60x60/007bff/ffffff?text=" + Uri.EscapeDataString(item.ProductName) : item.ProductImageUrl)" 
                                             class="me-3" width="60" height="60" alt="@item.ProductName" 
                                             style="border-radius: 8px; object-fit: cover;">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">@item.ProductName</h6>
                                            <small class="text-muted">@item.MerchantName</small>
                                            <div class="d-flex align-items-center justify-content-between">
                                                <small class="text-muted">@item.Quantity adet</small>
                                                <span class="fw-bold">₺@item.TotalPrice.ToString("F2")</span>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>

                            <hr>

                            <div class="order-summary">
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Ara Toplam:</span>
                                    <span>₺@cart.SubTotal.ToString("F2")</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Teslimat Ücreti:</span>
                                    <span>₺@cart.DeliveryFee.ToString("F2")</span>
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between fw-bold fs-5">
                                    <span>Toplam:</span>
                                    <span class="text-primary">₺@cart.TotalAmount.ToString("F2")</span>
                                </div>
                            </div>

                            <div class="mt-4">
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle"></i>
                                    <small>
                                        <strong>Tahmini Teslimat Süresi:</strong><br>
                                        @(cart.Items.FirstOrDefault()?.MerchantName ?? "Mağaza") - 15-30 dakika
                                    </small>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Address Modal -->
<AddressModal Show="@showAddressModal" 
              ShowChanged="@((bool value) => showAddressModal = value)"
              Address="@null"
              OnAddressSaved="@OnAddressSaved" />

@code {
    private bool isAuthenticated = false;
    private bool isLoading = true;
    private bool isProcessingOrder = false;
    
    private CartResponse? cart;
    private List<AddressResponse>? addresses;
    private CreateOrderRequest checkoutRequest = new();
    private bool showAddressModal = false;

    protected override async Task OnInitializedAsync()
    {
        isAuthenticated = await AuthService.IsAuthenticatedAsync();
        if (isAuthenticated)
        {
            await LoadCheckoutData();
        }
        isLoading = false;
    }

    private async Task LoadCheckoutData()
    {
        try
        {
            // Load cart
            cart = await CartService.GetCartAsync();
            
            // Load addresses
            addresses = await UserService.GetUserAddressesAsync();
            
            // Set default values
            if (cart?.Items?.Any() == true)
            {
                checkoutRequest.MerchantId = cart.Items.First().MerchantId;
                checkoutRequest.PaymentMethod = "Cash";
                
                // Set default address if available
                var defaultAddress = addresses?.FirstOrDefault(a => a.IsDefault);
                if (defaultAddress != null)
                {
                    checkoutRequest.DeliveryAddressId = defaultAddress.Id;
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading checkout data: {Message}", ex.Message);
        }
    }

    private void SelectAddress(Guid addressId)
    {
        checkoutRequest.DeliveryAddressId = addressId;
    }

    private void SelectPaymentMethod(string paymentMethod)
    {
        checkoutRequest.PaymentMethod = paymentMethod;
    }

    private async Task ProcessOrder()
    {
        try
        {
            isProcessingOrder = true;

            // Validate required fields
            if (checkoutRequest.DeliveryAddressId == Guid.Empty)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Lütfen teslimat adresi seçin.");
                return;
            }

            if (cart?.Items?.Any() != true)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Sepetinizde ürün bulunmuyor.");
                return;
            }

            // Prepare order items
            checkoutRequest.Items = cart.Items.Select(item => new OrderItemRequest
            {
                ProductId = item.ProductId,
                Quantity = item.Quantity,
                UnitPrice = item.UnitPrice
            }).ToList();

            // Create order
            var order = await CartService.CreateOrderAsync(checkoutRequest);
            
            if (order != null)
            {
                // Clear cart
                await CartService.ClearCartAsync();
                
                // Show success message
                await JSRuntime.InvokeVoidAsync("alert", 
                    $"Siparişiniz başarıyla oluşturuldu!\nSipariş No: {order.OrderNumber}\nTahmini teslimat: 15-30 dakika");
                
                // Redirect to order details or account page
                Navigation.NavigateTo($"/account?tab=orders");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Sipariş oluşturulurken bir hata oluştu. Lütfen tekrar deneyin.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", "Bir hata oluştu: " + ex.Message);
        }
        finally
        {
            isProcessingOrder = false;
        }
    }

    private void ShowAddAddressModal()
    {
        showAddressModal = true;
    }

    private async Task OnAddressSaved()
    {
        // Reload addresses after saving
        addresses = await UserService.GetUserAddressesAsync();
        
        // Set the newly added address as selected if it's the only one
        if (addresses?.Count == 1)
        {
            checkoutRequest.DeliveryAddressId = addresses.First().Id;
        }
        // Or set default address if available
        else if (addresses != null)
        {
            var defaultAddress = addresses.FirstOrDefault(a => a.IsDefault);
            if (defaultAddress != null)
            {
                checkoutRequest.DeliveryAddressId = defaultAddress.Id;
            }
        }
        
        await InvokeAsync(StateHasChanged);
    }
}
