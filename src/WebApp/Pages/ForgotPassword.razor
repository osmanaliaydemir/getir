@page "/forgot-password"
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Şifremi Unuttum - Getir</PageTitle>

<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="auth-card">
                    <div class="auth-header">
                        <h2 class="auth-title">
                            <i class="bi bi-key"></i>
                            Şifremi Unuttum
                        </h2>
                        <p class="auth-subtitle">E-posta adresinizi girin, şifre sıfırlama bağlantısı gönderelim</p>
                    </div>

                    <div class="auth-body">
                        <form @onsubmit="HandleForgotPassword">
                            <div class="form-group mb-3">
                                <label class="form-label">E-posta</label>
                                <input type="email" 
                                       class="@GetInputClass(isEmailInvalid)" 
                                       @bind="forgotPasswordRequest.Email" 
                                       @onblur="ValidateEmail"
                                       placeholder="ornek@email.com" />
                                @if (isEmailInvalid)
                                {
                                    <div class="invalid-feedback">Geçerli bir e-posta adresi girin</div>
                                }
                            </div>

                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-primary btn-lg" disabled="@isLoading">
                                    @if (isLoading)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        <text>Gönderiliyor...</text>
                                    }
                                    else
                                    {
                                        <i class="bi bi-send"></i>
                                        <text>Sıfırlama Bağlantısı Gönder</text>
                                    }
                                </button>
                            </div>
                        </form>

                        <div class="auth-divider">
                            <span>veya</span>
                        </div>

                        <div class="auth-links">
                            <a href="/login" class="btn btn-outline-primary">
                                <i class="bi bi-box-arrow-in-right"></i>
                                Giriş Yap
                            </a>
                            <a href="/register" class="btn btn-link">
                                <i class="bi bi-person-plus"></i>
                                Hesap Oluştur
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private ForgotPasswordRequest forgotPasswordRequest = new();
    private bool isLoading = false;
    private bool isEmailInvalid = false;

    private string GetInputClass(bool isInvalid)
    {
        return $"form-control {(isInvalid ? "is-invalid" : "")}";
    }

    private void ValidateEmail()
    {
        isEmailInvalid = string.IsNullOrEmpty(forgotPasswordRequest.Email) || !forgotPasswordRequest.Email.Contains("@");
    }

    private async Task HandleForgotPassword()
    {
        try
        {
            isLoading = true;
            ValidateEmail();

            if (isEmailInvalid)
            {
                await JSRuntime.InvokeVoidAsync("showError", "Lütfen geçerli bir e-posta adresi girin.");
                return;
            }

            var result = await AuthService.ForgotPasswordAsync(forgotPasswordRequest);
            
            if (result != null && result.IsSuccess)
            {
                await JSRuntime.InvokeVoidAsync("showSuccess", "Şifre sıfırlama bağlantısı e-posta adresinize gönderildi.");
                Navigation.NavigateTo("/login");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("showError", result?.Error ?? "E-posta gönderilirken bir hata oluştu.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("showError", "Bir hata oluştu: " + ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }
}
