@page "/addresses"
@inject UserService UserService
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@implements IDisposable

<PageTitle>Adreslerim - Getir</PageTitle>

@if (!isAuthenticated)
{
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <div class="card">
                    <div class="card-body py-5">
                        <i class="bi bi-person-x display-1 text-warning mb-4"></i>
                        <h3>Giriş Yapın</h3>
                        <p class="text-muted mb-4">
                            Adreslerinizi görüntülemek için giriş yapmanız gerekiyor.
                        </p>
                        <a href="/login" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right"></i>
                            Giriş Yap
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Yükleniyor...</span>
        </div>
        <p class="mt-3">Adresleriniz yükleniyor...</p>
    </div>
}
else
{
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                <li class="breadcrumb-item active" aria-current="page">Adreslerim</li>
            </ol>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="bi bi-geo-alt"></i>
                            Adreslerim
                        </h4>
                        <button class="btn btn-primary" @onclick="ShowAddAddressModal">
                            <i class="bi bi-plus"></i>
                            Yeni Adres Ekle
                        </button>
                    </div>
                    <div class="card-body">
                        @if (addresses?.Any() == true)
                        {
                            <div class="row">
                                @foreach (var address in addresses)
                                {
                                    <div class="col-md-6 col-lg-4 mb-4">
                                        <div class="card @(address.IsDefault ? "border-primary" : "") h-100">
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between align-items-start mb-3">
                                                    <h6 class="card-title mb-0">
                                                        @address.Title
                                                        @if (address.IsDefault)
                                                        {
                                                            <span class="badge bg-primary ms-2">Varsayılan</span>
                                                        }
                                                    </h6>
                                                    <div class="dropdown">
                                                        <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="dropdown">
                                                            <i class="bi bi-three-dots"></i>
                                                        </button>
                                                        <ul class="dropdown-menu">
                                                            <li>
                                                                <a class="dropdown-item" @onclick="@(() => EditAddress(address))">
                                                                    <i class="bi bi-pencil me-2"></i>Düzenle
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="dropdown-item" @onclick="@(() => SetDefaultAddress(address.Id))">
                                                                    <i class="bi bi-star me-2"></i>Varsayılan Yap
                                                                </a>
                                                            </li>
                                                            <li><hr class="dropdown-divider"></li>
                                                            <li>
                                                                <a class="dropdown-item text-danger" @onclick="@(() => DeleteAddress(address.Id))">
                                                                    <i class="bi bi-trash me-2"></i>Sil
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                                
                                                <div class="address-details">
                                                    <p class="card-text">
                                                        <i class="bi bi-geo-alt me-2"></i>
                                                        @address.AddressLine1<br>
                                                        @if (!string.IsNullOrEmpty(address.AddressLine2))
                                                        {
                                                            @address.AddressLine2<br>
                                                        }
                                                        @address.District, @address.City<br>
                                                        @address.PostalCode
                                                    </p>
                                                    
                                                    @if (!string.IsNullOrEmpty(address.Instructions))
                                                    {
                                                        <div class="mt-3">
                                                            <small class="text-muted">
                                                                <i class="bi bi-info-circle me-1"></i>
                                                                <strong>Not:</strong> @address.Instructions
                                                            </small>
                                                        </div>
                                                    }
                                                </div>
                                                
                                                <div class="mt-3">
                                                    <button class="btn btn-outline-primary btn-sm w-100" @onclick="@(() => UseAddress(address))">
                                                        <i class="bi bi-check-circle"></i>
                                                        Bu Adresi Kullan
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="bi bi-geo-alt display-1 text-muted mb-4"></i>
                                <h4>Henüz adresiniz yok</h4>
                                <p class="text-muted mb-4">İlk adresinizi ekleyerek sipariş vermeye başlayın!</p>
                                <button class="btn btn-primary" @onclick="ShowAddAddressModal">
                                    <i class="bi bi-plus"></i>
                                    Adres Ekle
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add/Edit Address Modal -->
    @if (showAddressModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            @(editingAddress == null ? "Yeni Adres Ekle" : "Adres Düzenle")
                        </h5>
                        <button type="button" class="btn-close" @onclick="CloseAddressModal"></button>
                    </div>
                    <div class="modal-body">
                        <form @onsubmit="SaveAddress">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Adres Başlığı *</label>
                                    <input type="text" class="form-control" @bind="addressForm.Title" placeholder="Ev, İş, vs." required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Şehir *</label>
                                    <select class="form-select" @bind="addressForm.City" required>
                                        <option value="">Şehir Seçin</option>
                                        <option value="İstanbul">İstanbul</option>
                                        <option value="Ankara">Ankara</option>
                                        <option value="İzmir">İzmir</option>
                                        <option value="Bursa">Bursa</option>
                                        <option value="Antalya">Antalya</option>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">İlçe *</label>
                                    <input type="text" class="form-control" @bind="addressForm.District" placeholder="İlçe" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Posta Kodu</label>
                                    <input type="text" class="form-control" @bind="addressForm.PostalCode" placeholder="34000">
                                </div>
                                <div class="col-12 mb-3">
                                    <label class="form-label">Adres Satırı 1 *</label>
                                    <input type="text" class="form-control" @bind="addressForm.AddressLine1" placeholder="Mahalle, sokak, bina no" required>
                                </div>
                                <div class="col-12 mb-3">
                                    <label class="form-label">Adres Satırı 2</label>
                                    <input type="text" class="form-control" @bind="addressForm.AddressLine2" placeholder="Daire, kat, vs.">
                                </div>
                                <div class="col-12 mb-3">
                                    <label class="form-label">Teslimat Notları</label>
                                    <textarea class="form-control" @bind="addressForm.Instructions" rows="3" placeholder="Kapı zili, özel talimatlar, vs."></textarea>
                                </div>
                                <div class="col-12 mb-3">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" @bind="addressForm.IsDefault">
                                        <label class="form-check-label">
                                            Bu adresi varsayılan adres olarak ayarla
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseAddressModal">İptal</button>
                        <button type="button" class="btn btn-primary" @onclick="SaveAddress" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            }
                            @(editingAddress == null ? "Adres Ekle" : "Güncelle")
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
}

@code {
    private bool isAuthenticated = false;
    private bool isLoading = true;
    private bool showAddressModal = false;
    private bool isSaving = false;
    private List<AddressResponse>? addresses;
    private AddressResponse? editingAddress;
    private AddAddressRequest addressForm = new();

    protected override async Task OnInitializedAsync()
    {
        isAuthenticated = await AuthService.IsAuthenticatedAsync();
        if (isAuthenticated)
        {
            await LoadAddresses();
        }
        isLoading = false;
        AuthService.AuthenticationStateChanged += OnAuthenticationStateChanged;
    }

    private async void OnAuthenticationStateChanged()
    {
        isAuthenticated = await AuthService.IsAuthenticatedAsync();
        if (isAuthenticated)
        {
            await LoadAddresses();
        }
        await InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        AuthService.AuthenticationStateChanged -= OnAuthenticationStateChanged;
    }

    private async Task LoadAddresses()
    {
        try
        {
            isLoading = true;
            addresses = await UserService.GetUserAddressesAsync();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("showError", "Adresler yüklenirken bir hata oluştu: " + ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowAddAddressModal()
    {
        editingAddress = null;
        addressForm = new AddAddressRequest();
        showAddressModal = true;
    }

    private void EditAddress(AddressResponse address)
    {
        editingAddress = address;
        addressForm = new AddAddressRequest
        {
            Title = address.Title,
            AddressLine1 = address.AddressLine1,
            AddressLine2 = address.AddressLine2,
            City = address.City,
            District = address.District,
            PostalCode = address.PostalCode,
            Instructions = address.Instructions,
            IsDefault = address.IsDefault
        };
        showAddressModal = true;
    }

    private void CloseAddressModal()
    {
        showAddressModal = false;
        editingAddress = null;
        addressForm = new AddAddressRequest();
    }

    private async Task SaveAddress()
    {
        try
        {
            isSaving = true;
            bool success;

            if (editingAddress == null)
            {
                success = await UserService.AddAddressAsync(addressForm);
            }
            else
            {
                var updateRequest = new UpdateAddressRequest
                {
                    Title = addressForm.Title,
                    AddressLine1 = addressForm.AddressLine1,
                    AddressLine2 = addressForm.AddressLine2,
                    City = addressForm.City,
                    District = addressForm.District,
                    PostalCode = addressForm.PostalCode,
                    Instructions = addressForm.Instructions,
                    IsDefault = addressForm.IsDefault
                };
                success = await UserService.UpdateAddressAsync(editingAddress.Id, updateRequest);
            }

            if (success)
            {
                await JSRuntime.InvokeVoidAsync("showSuccess", 
                    editingAddress == null ? "Adres başarıyla eklendi!" : "Adres başarıyla güncellendi!");
                await LoadAddresses();
                CloseAddressModal();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("showError", 
                    editingAddress == null ? "Adres eklenirken bir hata oluştu." : "Adres güncellenirken bir hata oluştu.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("showError", "Bir hata oluştu: " + ex.Message);
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task SetDefaultAddress(Guid addressId)
    {
        try
        {
            var success = await UserService.SetDefaultAddressAsync(addressId);
            if (success)
            {
                await JSRuntime.InvokeVoidAsync("showSuccess", "Varsayılan adres güncellendi!");
                await LoadAddresses();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("showError", "Varsayılan adres güncellenirken bir hata oluştu.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("showError", "Bir hata oluştu: " + ex.Message);
        }
    }

    private async Task DeleteAddress(Guid addressId)
    {
        try
        {
            var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Bu adresi silmek istediğinizden emin misiniz?");
            if (!confirmed) return;

            var success = await UserService.DeleteAddressAsync(addressId);
            if (success)
            {
                await JSRuntime.InvokeVoidAsync("showSuccess", "Adres silindi!");
                await LoadAddresses();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("showError", "Adres silinirken bir hata oluştu.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("showError", "Bir hata oluştu: " + ex.Message);
        }
    }

    private void UseAddress(AddressResponse address)
    {
        // Adresi kullanmak için checkout sayfasına yönlendir
        Navigation.NavigateTo($"/checkout?addressId={address.Id}");
    }
}
