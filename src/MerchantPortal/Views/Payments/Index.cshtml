@inject ILocalizationService LocalizationService
@{
    ViewData["Title"] = LocalizationService.GetString("PaymentHistory");
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.bootstrap5.min.css" />
    <style>
        .payment-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }
        .filter-section {
            background: #f8f9fa;
            padding: 1.5rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
        }
        .stat-badge {
            display: inline-block;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-weight: 600;
            margin-right: 1rem;
        }
        .stat-badge.success {
            background: #d4edda;
            color: #155724;
        }
        .stat-badge.warning {
            background: #fff3cd;
            color: #856404;
        }
        .stat-badge.info {
            background: #d1ecf1;
            color: #0c5460;
        }
    </style>
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="fas fa-money-bill-wave me-2"></i>Ödeme Geçmişi</h2>
        <p class="text-muted mb-0">Tüm ödeme işlemlerini görüntüleyin ve raporlayın</p>
    </div>
    <div>
        <a href="/Payments/Reports" class="btn btn-primary me-2">
            <i class="fas fa-chart-line me-1"></i> Raporlar
        </a>
        <a href="/Payments/Settlements" class="btn btn-outline-primary">
            <i class="fas fa-file-invoice-dollar me-1"></i> Mutabakat
        </a>
    </div>
</div>

<!-- Stats Summary -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="payment-card">
            <div class="d-flex align-items-center">
                <div class="stat-icon bg-success text-white me-3">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div>
                    <div class="small text-muted">Tamamlanan</div>
                    <div class="h4 mb-0" id="completedCount">-</div>
            </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="payment-card">
            <div class="d-flex align-items-center">
                <div class="stat-icon bg-warning text-white me-3">
                    <i class="fas fa-clock"></i>
                </div>
                <div>
                    <div class="small text-muted">Bekleyen</div>
                    <div class="h4 mb-0" id="pendingCount">-</div>
            </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="payment-card">
            <div class="d-flex align-items-center">
                <div class="stat-icon bg-primary text-white me-3">
                    <i class="fas fa-lira-sign"></i>
                </div>
                <div>
                    <div class="small text-muted">Toplam Ciro</div>
                    <div class="h4 mb-0" id="totalRevenue">₺0</div>
            </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="payment-card">
            <div class="d-flex align-items-center">
                <div class="stat-icon bg-info text-white me-3">
                    <i class="fas fa-calculator"></i>
                </div>
                <div>
                    <div class="small text-muted">Ort. Tutar</div>
                    <div class="h4 mb-0" id="avgAmount">₺0</div>
            </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="payment-card">
    <div class="filter-section">
        <h5 class="mb-3"><i class="fas fa-filter me-2"></i>Filtreler</h5>
        <div class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Başlangıç Tarihi</label>
                <input type="date" class="form-control" id="startDate" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Bitiş Tarihi</label>
                <input type="date" class="form-control" id="endDate" />
                    </div>
            <div class="col-md-2">
                <label class="form-label">Ödeme Yöntemi</label>
                <select class="form-select" id="paymentMethod">
                    <option value="">Tümü</option>
                    <option value="Cash">Nakit</option>
                    <option value="CreditCard">Kredi Kartı</option>
                    <option value="VodafonePay">Vodafone Pay</option>
                    <option value="BankTransfer">Havale/EFT</option>
                </select>
                </div>
            <div class="col-md-2">
                <label class="form-label">Durum</label>
                <select class="form-select" id="status">
                    <option value="">Tümü</option>
                    <option value="Completed">Tamamlandı</option>
                    <option value="Pending">Bekliyor</option>
                    <option value="Failed">Başarısız</option>
                </select>
                    </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <button class="btn btn-primary w-100" onclick="applyFilters()">
                    <i class="fas fa-search me-1"></i> Filtrele
                </button>
            </div>
        </div>
    </div>

    <!-- Export Buttons -->
    <div class="d-flex justify-content-end gap-2 mt-3">
        <button class="btn btn-success btn-sm" onclick="exportToExcel()">
            <i class="fas fa-file-excel me-1"></i> Excel İndir
        </button>
        <button class="btn btn-danger btn-sm" onclick="exportToPdf()">
            <i class="fas fa-file-pdf me-1"></i> PDF İndir
        </button>
    </div>
</div>

<!-- Payment History Table -->
<div class="payment-card">
    <h5 class="mb-3"><i class="fas fa-list me-2"></i>Ödeme Listesi</h5>
    <div class="table-responsive">
        <table id="paymentsTable" class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Sipariş No</th>
                    <th>Müşteri</th>
                    <th>Ödeme Yöntemi</th>
                    <th>Tutar</th>
                    <th>Durum</th>
                    <th>Oluşturma</th>
                    <th>Tamamlanma</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                <!-- DataTables will populate -->
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.bootstrap5.min.js"></script>
    <script src="~/js/modules/payments/payments.js" asp-append-version="true"></script>
}
