@model Getir.MerchantPortal.Models.LoginRequest
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "_Layout";
}

<style>
    body {
        background: linear-gradient(135deg, #5D3EBC 0%, #4a2d96 100%);
    }
    
    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }
    
    .login-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        overflow: hidden;
        max-width: 450px;
        width: 100%;
    }
    
    .login-header {
        background: linear-gradient(135deg, #5D3EBC 0%, #4a2d96 100%);
        color: white;
        padding: 3rem 2rem;
        text-align: center;
    }
    
    .login-logo {
        font-size: 4rem;
        margin-bottom: 1rem;
    }
    
    .login-body {
        padding: 3rem 2rem;
    }
    
    .form-control {
        padding: 0.75rem 1rem;
        border-radius: 10px;
        border: 2px solid #e0e0e0;
    }
    
    .form-control:focus {
        border-color: #5D3EBC;
        box-shadow: 0 0 0 0.2rem rgba(93, 62, 188, 0.25);
    }
    
    .btn-login {
        background: #5D3EBC;
        color: white;
        padding: 0.75rem;
        border-radius: 10px;
        font-weight: bold;
        border: none;
        width: 100%;
        transition: all 0.3s;
    }
    
    .btn-login:hover {
        background: #4a2d96;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(93, 62, 188, 0.4);
    }
</style>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="login-logo">
                <i class="fas fa-store"></i>
            </div>
            <h2>Getir Merchant Portal</h2>
            <p class="mb-0">Mağaza yönetim paneline hoş geldiniz</p>
        </div>
        <div class="login-body">
            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                
                @if (!string.IsNullOrEmpty(ViewData["ReturnUrl"]?.ToString()))
                {
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                }
                
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">E-posta</label>
                    <input asp-for="Email" class="form-control" placeholder="ornek@email.com" autofocus />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="mb-4">
                    <label asp-for="Password" class="form-label">Şifre</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                <button type="submit" class="btn btn-login">
                    <i class="fas fa-sign-in-alt me-2"></i> Giriş Yap
                </button>
                
                <div class="text-center mt-3">
                    <small class="text-muted">
                        Hesabınız yok mu? <a href="#" class="text-decoration-none">Kayıt olun</a>
                    </small>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

