@model List<Getir.MerchantPortal.Models.StockHistoryResponse>
@{
    ViewData["Title"] = "Stok Geçmişi";
    var product = ViewBag.Product as Getir.MerchantPortal.Models.ProductResponse;
    var fromDate = ViewBag.FromDate as DateTime?;
    var toDate = ViewBag.ToDate as DateTime?;
}

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard-modern.css" />
    <style>
        .timeline-item {
            position: relative;
            padding-left: 40px;
            padding-bottom: 2rem;
            border-left: 2px solid #e5e7eb;
        }
        
        .timeline-item:last-child {
            border-left-color: transparent;
        }
        
        .timeline-icon {
            position: absolute;
            left: -13px;
            top: 0;
            width: 24px;
            height: 24px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.75rem;
            color: white;
        }
        
        .timeline-icon.increase {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        }
        
        .timeline-icon.decrease {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        }
        
        .timeline-icon.manual {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .stock-card-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem;
            border-radius: 16px 16px 0 0;
        }
    </style>
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4 fade-in">
    <div>
        <h2 class="mb-1">
            <a href="/Products" class="text-decoration-none text-muted me-2">
                <i class="fas fa-arrow-left"></i>
            </a>
            <i class="fas fa-history me-2" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;"></i>
            Stok Geçmişi
        </h2>
        @if (product != null)
        {
            <p class="text-muted mb-0">@product.Name</p>
        }
    </div>
</div>

<!-- Product Info Card -->
@if (product != null)
{
    <div class="chart-container-modern mb-4 fade-in" style="animation-delay: 0.1s;">
        <div class="stock-card-header">
            <div class="row align-items-center">
                <div class="col-md-2">
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="@product.Name" class="img-fluid rounded-3" style="max-height: 100px;">
                    }
                    else
                    {
                        <div class="bg-white bg-opacity-25 rounded-3 d-flex align-items-center justify-content-center" style="height: 100px;">
                            <i class="fas fa-box fa-3x text-white opacity-50"></i>
                        </div>
                    }
                </div>
                <div class="col-md-7">
                    <h3 class="mb-2">@product.Name</h3>
                    <p class="mb-0 opacity-75">@product.Description</p>
                </div>
                <div class="col-md-3 text-end">
                    <div class="mb-2">
                        <small class="d-block opacity-75">Mevcut Stok</small>
                        <h2 class="mb-0">@product.StockQuantity</h2>
                    </div>
                    <div>
                        <small class="d-block opacity-75">Fiyat</small>
                        <h4 class="mb-0">₺@product.Price.ToString("N2")</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Date Filter -->
<div class="chart-container-modern mb-4 fade-in" style="animation-delay: 0.2s;">
    <div class="p-3">
        <form method="get" class="row g-3 align-items-end">
            <input type="hidden" name="productId" value="@product?.Id" />
            <div class="col-md-4">
                <label class="form-label fw-semibold"><i class="fas fa-calendar me-2"></i>Başlangıç Tarihi</label>
                <input type="date" name="fromDate" class="form-control" value="@fromDate?.ToString("yyyy-MM-dd")" style="border-radius: 10px;">
            </div>
            <div class="col-md-4">
                <label class="form-label fw-semibold"><i class="fas fa-calendar me-2"></i>Bitiş Tarihi</label>
                <input type="date" name="toDate" class="form-control" value="@toDate?.ToString("yyyy-MM-dd")" style="border-radius: 10px;">
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary w-100" style="border-radius: 10px;">
                    <i class="fas fa-filter me-2"></i>Filtrele
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Stock History Timeline -->
<div class="chart-container-modern fade-in" style="animation-delay: 0.3s;">
    <div class="chart-header mb-4">
        <div class="chart-title">
            <i class="fas fa-clock-rotate-left"></i>
            Geçmiş Hareketler
        </div>
        <span class="badge bg-primary">@Model.Count kayıt</span>
    </div>
    
    @if (Model != null && Model.Any())
    {
        <div class="timeline">
            @foreach (var history in Model)
            {
                var iconClass = history.ChangeAmount > 0 ? "increase" : (history.ChangeAmount < 0 ? "decrease" : "manual");
                var iconSymbol = history.ChangeAmount > 0 ? "arrow-up" : (history.ChangeAmount < 0 ? "arrow-down" : "edit");
                var changeClass = history.ChangeAmount > 0 ? "text-success" : (history.ChangeAmount < 0 ? "text-danger" : "text-primary");
                
                <div class="timeline-item">
                    <div class="timeline-icon @iconClass">
                        <i class="fas fa-@iconSymbol"></i>
                    </div>
                    
                    <div class="card border-0" style="background: #f9fafb;">
                        <div class="card-body p-3">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <div class="d-flex align-items-center mb-2">
                                        <span class="badge bg-secondary me-2">@history.ChangeType</span>
                                        <small class="text-muted">
                                            <i class="far fa-clock me-1"></i>
                                            @history.ChangedAt.ToString("dd MMM yyyy HH:mm")
                                        </small>
                                    </div>
                                    
                                    <div class="mb-1">
                                        <strong class="@changeClass">
                                            @(history.ChangeAmount > 0 ? "+" : "")@history.ChangeAmount
                                        </strong>
                                        <span class="text-muted mx-2">|</span>
                                        <span>@history.PreviousQuantity → @history.NewQuantity</span>
                                    </div>
                                    
                                    @if (!string.IsNullOrEmpty(history.Reason))
                                    {
                                        <div class="text-muted small">
                                            <i class="fas fa-info-circle me-1"></i>@history.Reason
                                        </div>
                                    }
                                    
                                    @if (!string.IsNullOrEmpty(history.OrderNumber))
                                    {
                                        <div class="mt-1">
                                            <a href="/Orders/Details/@history.OrderNumber" class="badge bg-primary text-decoration-none">
                                                <i class="fas fa-shopping-cart me-1"></i>Sipariş #@history.OrderNumber
                                            </a>
                                        </div>
                                    }
                                </div>
                                
                                <div class="col-md-4 text-end">
                                    @if (!string.IsNullOrEmpty(history.ChangedByName))
                                    {
                                        <div class="text-muted small">
                                            <i class="fas fa-user me-1"></i>@history.ChangedByName
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
            <h5 class="text-muted">Henüz stok hareketi yok</h5>
            <p class="text-muted small">Seçilen tarih aralığında stok hareketi bulunamadı.</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Initialize tooltips if needed
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
}

