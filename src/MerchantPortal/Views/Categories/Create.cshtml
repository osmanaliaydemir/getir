@model Getir.MerchantPortal.Models.CreateCategoryRequest
@{
    ViewData["Title"] = "Yeni Kategori Ekle";
    var categories = ViewBag.Categories as List<Getir.MerchantPortal.Models.ProductCategoryResponse> ?? new();
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="stat-card">
            <h4 class="mb-4">
                <i class="fas fa-tags"></i> Yeni Kategori Ekle
            </h4>

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="ParentCategoryId" class="form-label">
                        Üst Kategori
                        <small class="text-muted">(İsteğe bağlı - Ana kategori için boş bırakın)</small>
                    </label>
                    <select asp-for="ParentCategoryId" class="form-select">
                        <option value="">Ana Kategori (Üst kategori yok)</option>
                        @foreach (var category in categories.Where(c => c.IsActive))
                        {
                            <option value="@category.Id">
                                @if (category.ParentCategoryId != null)
                                {
                                    <text>└─ </text>
                                }
                                @category.Name
                                @if (category.ProductCount > 0)
                                {
                                    <text> (@category.ProductCount ürün)</text>
                                }
                            </option>
                        }
                    </select>
                    <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
                    <small class="form-text text-muted">
                        <i class="fas fa-info-circle"></i>
                        Bir üst kategori seçerek hiyerarşik yapı oluşturabilirsiniz
                    </small>
                </div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Kategori Adı *</label>
                    <input asp-for="Name" class="form-control" placeholder="Örn: Meyve & Sebze, İçecekler, Kahvaltılık..." autofocus />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Kategori hakkında kısa bir açıklama..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label">Görsel URL</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="https://..." />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <small class="form-text text-muted">
                        <i class="fas fa-image"></i>
                        Kategori için görsel eklemek isterseniz URL girebilirsiniz
                    </small>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="DisplayOrder" class="form-label">Sıralama</label>
                        <input asp-for="DisplayOrder" type="number" class="form-control" placeholder="0" value="0" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Küçük değer önce gösterilir
                        </small>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label d-block">Durum</label>
                        <div class="form-check form-switch mt-2">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                            <label asp-for="IsActive" class="form-check-label">
                                Aktif
                                <small class="text-muted">(Müşterilere gösterilsin mi?)</small>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="alert alert-info">
                    <i class="fas fa-lightbulb"></i>
                    <strong>İpucu:</strong> Kategorileri hiyerarşik olarak organize ederek müşterilerinizin ürünleri daha kolay bulmasını sağlayabilirsiniz.
                    Örnek: "Meşrubat" kategorisini "İçecekler" kategorisinin altında oluşturabilirsiniz.
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Geri
                    </a>
                    <button type="submit" class="btn btn-getir">
                        <i class="fas fa-save"></i> Kategoriyi Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

